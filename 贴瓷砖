#include<iostream>
using namespace std;
int f(int n)
{
	if(n==1) return 1;
	if(n==2) return 3;
	return  f(n-1)+2*f(n-2);
	
}
int main()
{
	int T;
	cout<<"请输入T"; 
	while(cin>>T,T>20)
	{
		cout<<"T小于20，请重新输入";
	}
	cout<<"请输入N"; 
	int N;
	for(int i=0;i<T;i++)
	{	
		cin>>N;
		cout<<f(N);
	}
	return 0;
}
